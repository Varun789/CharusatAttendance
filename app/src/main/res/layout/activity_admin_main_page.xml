<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_main_page"
    android:background="@drawable/facultyback"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dot1"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="360dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_admin_submitted_form"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:layout_marginTop="60dp"
                android:layout_marginHorizontal="30dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#a1c4fd">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submitted Form"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_admin_approved"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="30dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#a1c4fd">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approved Form"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_admin_fully_approved"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="30dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#a1c4fd">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fully Approved"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"
                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_admin_rejected"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="30dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#a1c4fd">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rejected"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"
                    />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>